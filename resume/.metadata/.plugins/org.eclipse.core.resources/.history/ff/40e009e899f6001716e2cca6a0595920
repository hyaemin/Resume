<script type="text/javascript">

$(function() {
	
	$('scroll').click(function(){
		$('.menu_area').css('display','block');
	})
	
	//chart
	  $('.chart').easyPieChart({
	    scaleColor: "#ecf0f1",
	    lineWidth: 20,
	    lineCap: 'butt',
	    barColor: '#7C7877',
	    trackColor:	"#ecf0f1",
	    size: 200,
	    animate: 500
	  });

	
	//하단 화살표이동
    $('.scroll-down').click (function(){
      $('html, body').animate({scrollTop: $('.about_content').offset().top }, 'slow');
      return false;
    });
    
  
  });

</script>

